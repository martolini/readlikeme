html(lang="en")
	head
		title="readwith.me"
		link(rel="stylesheet", href="//netdna.bootstrapcdn.com/bootswatch/3.1.1/simplex/bootstrap.min.css")

	body
		.navbar.navbar-default
			.navbar-header
				button.navbar-toggle(data-toggle="collapse", data-target=".navbar-responsive-collapse", type="button")
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href="#") readlike.me
			.navbar-collapse.collapse.navbar-responsive-collapse
				ul.nav.navbar-nav
					li.active
						a(href="#") Home
					li
						a(href="#") @Me
				form.navbar-form.navbar-right
					input.form-control(type="text", placeholder="@Search")

		.container
			.row
				.col-sm-3
					.panel.panel-default
						.panel-heading
							h3.panel-title.text-center This is you
						.panel-body.text-center
							if user.is_authenticated
								p Welcome @{{ user }}
							else
								p Welcome @Reader 
						.panel-footer
							span.text-success 11 followers
							span.text-warning.pull-right 19 followees


				.col-sm-8
					- block content
					- endblock
