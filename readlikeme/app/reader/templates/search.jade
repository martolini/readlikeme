extends base
- load staticfiles
- load thumbnail
- load reader_tags
- load article_tags
- block include
script(src="{% static 'django_ajax/js/jquery.ajax.min.js' %}")

- endblock
- block content

.container
	.row
		.col-sm-3
			- show_reader_dashboard

		.col-sm-8
			div.header
				.panel.panel-info
					.panel-heading
						h3.panel-title Post an article
					.panel-body
						form(method="POST", action="{% url 'post_article' %}")
							- csrf_token
							div.input-group
								input.form-control(name="url", type="text", placeholder="http://yoururl....", required="true")
								span.input-group-btn
									button.btn.btn-info(type="submit") Post!
			div.list-group
				if articles
					p.lead Articles
				else
					p.lead No articles found...
				- list_articles articles

			div.list-group
				if readers
					p.lead Readers
				else
					p.lead No readers found...
				- list_readers readers

							
- endblock
- block footer
script(type="text/javascript", src="{% static 'js/ajax.js' %}")
- endblock